[Unit]
Description = SHM (Shared Memory) listener for ss963 serial driver board and SPI driver
After = multi-user.target

[Service]

User=root
SyslogIdentifier = spi-service
StandardOutput = syslog+console
StandardError = syslog+console
EnvironmentFile = /etc/spi.service.conf
ExecStart = /usr/sbin/spiservice --port-count=${PORT_COUNT} --latch-pin=${LATCH_PIN} --latch-delay=${LATCH_DELAY} --speed=${SPEED} --loop-delay-us=${LOOP_DELAY_US}
Type=idle


[Install]

WantedBy = multi-user.target

